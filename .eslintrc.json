{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "google"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react", 
        "prettier"
    ],
    "rules": {
        "indent": ["error", 2],
        "prettier/prettier": "error",
        "require-jsdoc" : 0,
        "object-curly-spacing" : 0,
        "quotes": [2, "double", { "avoidEscape": true }]
    }
}
